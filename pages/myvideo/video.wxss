page{
  height: 100%;
}
.bg{
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  z-index: -1;
  overflow: hidden;
}
.bg>image{
  height: 100%;
  width: 100%;
  filter: blur(45px); /*设置图片的模糊度*/
  overflow: hidden;
}
.shadows{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgb(0, 0, 0,0.3);
  top: 0;
  left: 0;
}
